<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_small">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_above="@+id/buttonsbot"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="16dip"
            android:paddingRight="16dip">

        <TextView
                android:id="@+id/tvExpResultTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="bottom"
                android:text="@string/error"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

        <TextView
                android:id="@+id/tvExpResultPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/error"
                android:textColor="@android:color/black"
                android:textIsSelectable="true"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/tvExpResultBot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/error"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/buttonsbot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="8dip">

        <Button
                android:id="@+id/bExpResultOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dip"
                android:background="@drawable/button_startgrind"
                android:text="@string/okay"/>

        <Button
                android:id="@+id/bExpResultLastRuns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_startgrind"
                android:text="@string/showlastruns"/>
    </LinearLayout>

</RelativeLayout>