<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="32dip"
                android:paddingRight="16dip">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/buttonsbot"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

        <TextView
                android:id="@+id/tvExpResultTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical|left"
                android:text="@string/error"
                android:textColor="@android:color/black"
                android:textSize="14dip"/>

        <TextView
                android:id="@+id/tvExpResultPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="@string/error"
                android:textColor="@android:color/black"
                android:textIsSelectable="true"
                android:textSize="20dip"/>

        <TextView
                android:id="@+id/tvExpResultBot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/error"
                android:textColor="@android:color/black"
                android:textSize="14dip"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/buttonsbot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

        <Button
                android:id="@+id/bExpResultOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:background="@drawable/button_startgrind"
                android:text="@string/okay"/>

        <Button
                android:id="@+id/bExpResultLastRuns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_startgrind"
                android:text="@string/showlastruns"/>
    </LinearLayout>

</RelativeLayout>