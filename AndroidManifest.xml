<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.hermith.efficientgrinder"
    android:versionCode="8"
    android:versionName="1.1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".EfficientGrinderStarting"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".exppermin.ExpPerMinute"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="net.hermith.efficientgrinder.exppermin.EFFI" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".exppermin.ExpCountDown"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".exppermin.ShowLastRuns"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".exppermin.ExpResultScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".economy.EconomyMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="net.hermith.efficientgrinder.economy.ECON" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".economy.EconCountDown"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".economy.EconResultScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".economy.ShowLastRunsEcon"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>